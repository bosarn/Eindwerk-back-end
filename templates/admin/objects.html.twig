{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <div class="row">
            {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                <p>Email: {{ app.user.email }}</p>
            {% endif %}

            {% for object in objects %}

                Name: {{ object.Name }} <br>
                Time to print: {{ object.PrintTime }}<br>
                Size: {{ object.Size }}<br>
                How many files: {{ object.files | length }}<br>

                {% for image in object.Images %}
                    {% if loop.first %}
                     {{ image.name }}
                    {% endif %}
                {% endfor %}
            <form action="{{ path('delete_object',{ 'id':  object.id  })  }}">
                <input type="submit" value="Delete object">
            </form>
            <a href="{{ path('object_detail',{ 'id': object.id  }) }}">Details... </a>
                <hr>
            {% endfor %}
            <a href="/">Home</a>
        </div>
        TODO add 1 file to db
        Price + Files + Categories + Images
        add js to add inputs
        <hr>

        <form name="post" action="{{ path('add_object')  }}" method="POST" enctype="multipart/form-data">
            <label for="object_name">
                Objectname
            </label>
            <input type="text" id="object_name" name="object_name">
            <label for="object_printtime">
                Printtime
            </label>
            <input type="text" name="object_printtime" id="object_printtime">
            <label for="object_size">
                Size
            </label>
            <input type="text" name="object_size" id="object_size">

            <label for="object_files">
                Upload Files
            </label>
            <input type="file" name="object_files[]" id="object_files" multiple="multiple">

            <label for="object_images">
                Upload images
            </label>
            <input type="file" name="object_images[]" id="object_images" multiple="multiple">

            <input type="submit" value="Save object">





        </form>
    </div>
{% endblock %}